{
  "expo": {
    "name": "skysense",
    "slug": "skysense",
    "version": "1.0.0",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      ["expo-font"],
      "expo-secure-store",
      [
        "expo-splash-screen",
        {
          "imageWidth": "100%"
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.jpg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-screen.png",
      "resizeMode": "cover"
    },
    "ios": {
      "bundleIdentifier": "com.eusebiu.skysense",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show your current city."
      },
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.eusebiu.skysense"
    }
  }
}
